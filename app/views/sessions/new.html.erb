<div class="sign-in-form">
  <%= form_for :session, url: sign_in_path do |f| %>
    <i class="fa fa-lock fa-4x" id='lock-icon' aria-hidden="true"></i>
    <div id='register'>Sign In</div>
    <div id='demo'>Just exploring? Sign in with 'demo', 'demo'</div>
    <div class='sign-in-error'><%= flash[:alert] %></div>
    <div class="row">
      <div class="small-12 medium-6 medium-offset-3 columns">
        <%= f.text_field :login, placeholder: "email or username", autoComplete: "off" %>
        <%= f.password_field :password, placeholder: "password", autoComplete: "off"  %>
      </div>
    </div>
    <div class="form-actions">
      <a href='/sign-up' id='login-signup-button'><i class="fa fa-arrow-circle-left" style='margin-right: 10px' aria-hidden="true"></i>Register</a>
      <a id='login-signup-button'>Continue<i class="fa fa-arrow-circle-right" style='margin-left: 10px' aria-hidden="true"></i></a>
    </div>
  <% end %>
</div>

